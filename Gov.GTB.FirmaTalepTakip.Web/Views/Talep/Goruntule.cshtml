@model Gov.GTB.FirmaTalepTakip.Model.ViewModel.TalepDetayFirmaViewModel
@{
    ViewBag.Title = "Talep Bilgileri";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-default">
            <form class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <label for="TalepReferansNo" class="col-sm-2 control-label">Talep Referans No</label>
                        <div class="col-sm-10">
                            <label class="form-control" style="font-weight:normal">@Model.TalepReferansNo</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="RefTalepKonu" class="col-sm-2 control-label">Talep Konusu</label>
                        <div class="col-sm-10">
                            <label class="form-control" style="font-weight:normal">@Model.RefTalepKonu.TKonu</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="KonuTalepAciklama" class="col-sm-2 control-label">Talep Açıklama</label>
                        <div class="col-sm-10">
                            <label class="form-control" style="font-weight:normal">@Model.KonuTalepAciklama</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="IrtibatPersoneli" class="col-sm-2 control-label">Firma İrtibat Personeli</label>
                        <div class="col-sm-10">
                            <label class="form-control" style="font-weight:normal">@Model.IrtibatPersoneli</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="TalepTarih" class="col-sm-2 control-label">Talep Tarihi</label>
                        <div class="col-sm-10">
                            <label class="form-control" style="font-weight:normal">@Model.TalepTarih.Value</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CevapDurum" class="col-sm-2 control-label">Cevap Durumu</label>
                        <div class="col-sm-10">
                            <label class="form-control" style="font-weight:normal">@(Model.CevapDurum ? Html.Raw("CEVAPLANDI") : Html.Raw("CEVAPLANMADI"))</label>
                        </div>
                    </div>
                    @if (Model.CevapDurum)
                    {
                        <div class="form-group">
                            <label for="CKonu" class="col-sm-2 control-label">Cevap Konusu</label>
                            <div class="col-sm-10">
                                <label class="form-control" style="font-weight:normal">@Model.CevapDetayGumruk.RefTalepCevap.CKonu</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CevapAciklama" class="col-sm-2 control-label">Cevap Açıklama</label>
                            <div class="col-sm-10">
                                <label class="form-control" style="font-weight:normal">@Model.CevapDetayGumruk.CevapAciklama</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CevapTarih" class="col-sm-2 control-label">Cevaplanma Tarihi</label>
                            <div class="col-sm-10">
                                <label class="form-control" style="font-weight:normal">@(Model.CevapDetayGumruk.CevapTarih.HasValue ? Html.Raw(Model.CevapDetayGumruk.CevapTarih.Value.ToLongDateString()) : Html.Raw(""))</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CevapAciklama" class="col-sm-2 control-label">Cevaplayan Personel</label>
                            <div class="col-sm-10">
                                <label class="form-control" style="font-weight:normal">@Model.CevaplayanPersonel</label>
                            </div>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
